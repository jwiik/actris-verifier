actor Sum int x ==> int y: 
  
  int sum;
  
  contract x:1 ==> y:1
    requires 0 <= x[@]
    ensures y[0] = y[0]
    ensures y[@] >= y[@]
    ensures 0 < @(y) ==> y[@] = y[@-1]+x[@]
  end

  initialize ==> do
    sum := 0;
  end
  
  action x:[i] ==> y:[sum]
    requires 0 <= i
    ensures i <= sum 
  do
    sum := sum+i;
  end
  
end