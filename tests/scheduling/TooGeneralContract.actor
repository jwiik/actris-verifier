actor Abs int x ==> int y:
  pos: action x:[i] ==> y:[i]
    guard 0 <= i
  end
  neg: action x:[i] ==> y:[-i]
    guard i < 0
  end
end

network N int x ==> int y:
  
  contract x:1 ==> y:1 
    guard 0 <= x[@]
  end
  
  contract x:1 ==> y:1 
    guard x[@] < 0
  end
  
  entities a = Abs(); end
  structure x --> a.x; a.y --> y; end
  
end