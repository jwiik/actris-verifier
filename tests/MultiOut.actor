@sdf
actor Add2 int in ==> int out :
  action in:[i] ==> out:[i,i+i] end
end

network Net int in ==> int out :
  action in:[x] ==> out:[x,x+x] end
  
  chinvariant tot(b) == 2*rd(a)
  chinvariant (forall int i :: 0 <= i && i < tot(b) && i % 2 == 0 ==> b[i] == a[i/2])
  chinvariant (forall int i :: 0 <= i && i < tot(b) && i % 2 == 1  ==> b[i] == a[i/2]+a[i/2])
  
  entities
    add = Add2();
  end
  structure
    a: in --> add.in;
    b: add.out --> out;
  end

end