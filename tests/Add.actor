@noinfer
actor Add int in1, int in2 ==> int out :
  action in1:[i], in2:[j] ==> out:[i+j] 
  end
end

network Net int in1, int in2 ==> int out :
    
  action in1:1, in2:1 ==> out:1
    //requires 0 <= in1[@]
    //requires 0 <= in2[@]
    //ensures out[@] = in1[@]+in2[@]
  end
  
  //chinvariant @(a) = @(b) && @(b) = @(c)
  //chinvariant rd(a) = tot(c) && rd(b) = tot(c)
  
  entities
    add = Add();
  end
  
  structure
    a: in1 --> add.in1;
    b: in2 --> add.in2;
    c: add.out --> out;
  end

end