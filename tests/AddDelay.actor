@sdf
actor Add int in1, int in2 ==> int out :
  action in1:[i], in2:[j] ==> out:[i+j] end
end

@sdf
actor Delay(int k) int in ==> int out :
  initialize ==> out:[k] end
  action in:[i] ==> out:[i] end
end

network Net int in ==> int out :
  
  action in:1 ==> out:1
    requires (forall int i :: 0 <= i && i < tot(in) ==> 0 < in[i])
    ensures out[0] = in[0]
    ensures (forall int i :: 1 <= i && i < tot(out) ==> out[i] = in[i]+out[i-1])
  end
  
  invariant tokens(b,1)
  
  chinvariant init(a) = init(c)
  chinvariant b[0] = 0
  
  entities
    add = Add();
    del = Delay(0);
  end
  
  structure
    a: in --> add.in1;
    b: del.out --> add.in2;
    c: add.out --> out;
    d: add.out --> del.in;
  end

end