actor LShift8 bv(size=8) In ==> bv(size=8) Out:
  action In:[x] ==> Out:[x << 0x02] end
end

actor BvAnd8 bv(size=8) In1, bv(size=8) In2 ==> bv(size=8) Out:
  action In1:[x1], In2:[x2] ==> Out:[x1 & x2] 
    requires x1 & 0x01 = 0x01
    requires x2 & 0x01 = 0x01
    ensures (x1 & x2) & 0x01 = 0x01
  end
end

actor BvOr16 bv(size=16) In1, bv(size=16) In2 ==> bv(size=16) Out:
  action In1:[x1], In2:[x2] ==> Out:[x1 | x2] 
    requires x1 & 0x0001 = 0x0001 || x2 & 0x0001 = 0x0001
    ensures (x1 | x2) & 0x0001 = 0x0001
  end
end

actor BvXor12 bv(size=12) In1, bv(size=12) In2 ==> bv(size=12) Out:
  action In1:[x1], In2:[x2] ==> Out:[x1 ^ x2] 
    requires x1 & 0x001 = 0x001 && x2 & 0x001 = 0x001
    ensures (x1 ^ x2) & 0x001 = 0x000
  end
end

actor BvNot4 bv(size=4) In ==> bv(size=4) Out:
  action In:[x] ==> Out:[~x] 
    requires x = 0x0
    ensures ~x = 0xF
  end
end