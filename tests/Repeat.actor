actor Repeater int in ==> int out :
  action in:[i] ==> out:[i,i] end
end

network Net int in ==> int out :
  
  action in:1 ==> out:2 end
  
  chinvariant 2*@(a) = @(b)
  chinvariant 2*rd(a) = tot(b)

  entities
    rep = Repeater();
  end
  
  structure
    a: in --> rep.in;
    b: rep.out --> out;
  end

end