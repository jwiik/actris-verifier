actor Split int in ==> int out1, int out2 :
  action in:[i] ==> out1:[i],out2:[i] end
  action in:[i] ==> out2:[i] end
end

@sdf
actor Delay(int k) int in ==> int out :
  initialize ==> out:[k] end
  action in:[i] ==> out:[i] end
end

actor Repeater int in1, int in2 ==> int out :
  action in1:[i] ==> out:[i] end
  action in2:[i] ==> out:[i] end
end

network Livelock int in ==> int out :
  
  action in:[x] ==> out:[y] end
  
  
  
  entities
    spl = Split();
    rep = Repeater();
    del = Delay(0);
  end
  
  structure
    a: in --> spl.in;
    b: spl.out1 --> out;
    c: spl.out2 --> rep.in1;
    d: rep.out --> del.in;
    e: del.out --> rep.in2;
  end

end